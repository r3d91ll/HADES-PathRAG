# HADES-PathRAG Configuration
# ---------------------------
# Copy this file to .env and adjust settings as needed

# LLM Provider: 'ollama', 'openai', 'azure', 'bedrock', 'huggingface'
LLM_PROVIDER=ollama

# Ollama Settings
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3
OLLAMA_EMBED_MODEL=nomic-embed-text
OLLAMA_TIMEOUT=60
OLLAMA_TEMPERATURE=0.7
OLLAMA_TOP_P=0.9
OLLAMA_TOP_K=40
OLLAMA_MAX_TOKENS=2048

